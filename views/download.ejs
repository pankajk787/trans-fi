<!DOCTYPE html>
    <%- include('partials/common', { title: 'Download File | Trans-Fi | Easy File Sharing', stylePath: '/css/style.css' }) %>
        <main class="main">
            <section class="download">
                <img src="/img/download.svg" alt="Download Icon" class="download__icon" draggable="false">
                <% if(locals.error) { %>
                    <h4><%= locals.error %></h4>
                <% } else { %>
                    <h2>Your file is ready to download</h2>
                    <p>Link exprires in 2 hours</p>
                    <div class="download__meta">
                        <h4><%= filename %></h4>
                        <small><%= parseInt(size / 1024) %> KB</small>
                    </div>
                    <div class="send-btn-container">
                        <a href="<%= download_url %>">Download file</a>
                    </div>
                <% } %>
            </section>
        </div>
    </body>
</html>